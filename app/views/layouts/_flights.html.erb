    
    <div class="padding-div">

        <div style="float: left; width: 30%; padding-right: 20px;">
            <label>Città di partenza</label>
            <select id="cittaPartenza">
                <option value="none" disabled selected>Seleziona la città di partenza</option>
                <optgroup id = "preferiti" label="Preferiti"></optgroup>
                <%= render 'layouts/airports' %>
            </select>
        </div>
        
        <div style="float: left; width: 30%; padding-right: 20px;">
            <label>Città di arrivo</label>
            <select id="cittaArrivo">
                <option value="none" disabled selected>Seleziona la città di arrivo</option>
                <optgroup id = "preferiti" label="Preferiti"></optgroup>
                <%= render 'layouts/airports' %>
            </select>
        </div>

        <div style="clear:both; height: 70px;"></div>

        <div style="float: left; width: 30%; padding-right: 20px;">
            <label style="padding-bottom: 14px;"> Andata: </label>
            <input type="text" id="dataAndata" class="datepicker"><br/><br/>
        </div>

        <div style="float: left; width: 30%; padding-right: 20px;">
            <label style="padding-bottom: 0px;">
                <input type="checkbox" class="filled-in" id="voli_check" OnClick="abilitaRitorno(this);" style="padding-bottom: 32px;"/>
                <span id="a" style="padding-bottom: 32px;">Ritorno:</span>
            </label>
            <input type="text" id="dataRitorno" disabled="true" class="datepicker"><br/><br/>
        </div>

        <div style="clear:both; height: 40px;"></div>
        
        <div style="float: left; width: 30%; padding-right: 20px;">
            <label>Passeggeri:</label>
            <a id="a-" class="btn-floating btn-small waves-effect black"><i class="material-icons">remove</i></a>
            <label id="passeggeri">1</label>
            <a id="aadd" class="btn-floating btn-small waves-effect black"><i class="material-icons">add</i></a>
        </div>

        <% if current_user %>
            <div style="float: left; width: 30%; padding-right: 20px;">
                <label>Meteo:</label>
                <div id="meteo">

                    <label style="font-size: 10pt;" class="weather">Città:</label>
                    <div id="nomeCitta"></div>

                    <div style="clear:both;"></div>

                    <label style="font-size: 10pt;" class="weather">Temperatura:</label>
                    <div id="meteoCitta"></div>
                </div>
            
            </div>
        <% end %>

    </div>
    
    <div style="clear:both;"></div>
    <br/>

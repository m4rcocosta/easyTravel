<div id="dinamic_container">
    
    <div class="left_alignment">
        <label>Città di partenza</label>
        <select id="cittaPartenza">
            <option value="none" disabled selected>Seleziona la città di partenza</option>
            <optgroup id = "preferiti" label="Preferiti"></optgroup>
            <optgroup label="Partenze">
                <option value="rome">Roma</option>
                <option value="mila">Milano</option>
                <option value="trn">Torino</option>
            </optgroup>
        </select>
        <br/><br/>
        <label>Città di arrivo</label>
        <select id="cittaArrivo">
            <option value="none" disabled selected>Seleziona la città di arrivo</option>
            <optgroup id = "preferiti" label="Preferiti"></optgroup>
            </optgroup label="Arrivi">
                <option value="rome">Roma</option>
                <option value="mila">Milano</option>
                <option value="trn">Torino</option>
            </optgroup>
        </select>
    </div>

    <div class="left_alignment" style="width: 2%;"></div>

    <div class="left_alignment">
        <form action="#"  class="calendar_style">
            <label> Andata: </label> 
            <input type="date" id="dataAndata"><br/><br/>
            <label>
                <input type="checkbox" class="filled-in" id="check" OnClick="abilitaRitorno(this);" />
                <span id="a">Ritorno:</span> 
                <input type="date" id="dataRitorno" disabled="true">
            </label>
        </form>
    </div>
    <div style="clear:both;"></div>
    <br/>

</div>

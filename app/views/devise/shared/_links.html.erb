<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <% if provider == :google_oauth2 %>
      <% if controller_name != 'registrations' %>
        <br/><%= link_to image_tag("OAuth accesso.png", class:"oauthlogo", :alt => "Google"), omniauth_authorize_path(resource_name, provider), style: 'color: white;' %><br />
      <% else %>
        <br/><%= link_to image_tag("OAuth registrazione.png", id:"oauthauthentication", class:"oauthlogo", :alt => "Google"), omniauth_authorize_path(resource_name, provider), style: 'color: white;' %><br />
      <% end %>
    <% else %>
      <br/><%= link_to "Accedi con #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), style: 'color: white;' %><br />
    <% end %>
  <% end -%>
<% end -%>

<%- if controller_name != 'sessions' %>
  <br/><%= link_to "Accedi", new_session_path(resource_name), style: 'color: white;' %><br/>
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <br/><%= link_to "Registrati", new_registration_path(resource_name), style: 'color: white;' %><br />
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <br/><%= link_to "Password dimenticata", new_password_path(resource_name), style: 'color: white;' %><br />
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <br/><%= link_to "Non hai ricevuto le istruzioni per confermare?", new_confirmation_path(resource_name), style: 'color: white;' %><br />
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <br/><%= link_to "Non hai ricevuto le istruzioni per sbloccare?", new_unlock_path(resource_name), style: 'color: white;' %><br />
<% end -%>

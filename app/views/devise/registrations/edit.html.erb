<div class="devise_format"> 

<h2>Modifica <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Aspettando conferma per: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(lascia vuoto se non vuoi modificare)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em>Minimo <%= @minimum_password_length %> caratteri</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label 'Conferma password' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label 'Password corrente' %> <i>(Ã¨ necessaria la tua password corrente per confermare i tuoi cambiamenti)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Aggiorna", class: 'waves-effect waves-light btn' %>
  </div>
<% end %>

<h3>Cancella il mio account</h3>

<p>Vuoi calcellare l'account? <%= button_to "Cancella il mio account", registration_path(resource_name), data: { confirm: "Sei sicuro?" }, method: :delete %></p>

<%= link_to "Indietro", :back, class: 'waves-effect waves-light btn' %>

</div>

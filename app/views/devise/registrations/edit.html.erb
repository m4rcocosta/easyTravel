<%= javascript_include_tag 'application' %>
<div class="devise_format"> 

<h2>Modifica <%= resource_name.to_s.humanize %></h2><br/>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="input-field col s6">
    <%= f.email_field :email, placeholder: "Placeholder", id: "email", class: "validate", autocomplete: "email" %>
    <%= f.label :email, for: "email" %><br />
  </div>

  <div class="input-field col s6">
    <%= f.text_field :first_name, placeholder: "Placeholder", id: "first_name", class: "validate", autocomplete: "first_name" %>
    <%= f.label "Nome", for: "first_name" %><br />
  </div>

  <div class="input-field col s6">
    <%= f.text_field :last_name, placeholder: "Placeholder", id: "last_name", class: "validate", autocomplete: "last_name" %>
    <%= f.label "Cognome", for: "last_name" %><br />
  </div>

  <div class="input-field col s6">
    <%= f.text_field :birth, placeholder: "Placeholder", id: "birth", class: "validate", autocomplete: "birth", class: "datepicker" %>
    <%= f.label 'Data di nascita', for: "birth" %><br />
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Aspettando conferma per: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(lascia vuoto se non vuoi modificare)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em>Minimo <%= @minimum_password_length %> caratteri</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label 'Conferma password' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label 'Password corrente' %> <i>(Ã¨ necessaria la tua password corrente per confermare i tuoi cambiamenti)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Aggiorna", class: 'waves-effect waves-light btn' %>
  </div>
<% end %>

<h3>Cancella il mio account</h3>

<p>Vuoi cancellare l'account? <%= button_to "Cancella il mio account", registration_path(resource_name), data: { confirm: "Sei sicuro?" }, method: :delete, class: 'waves-effect waves-light btn' %></p>

<%= link_to "Indietro", :back, class: 'waves-effect waves-light btn' %>

<div class="push-footer"></div>

</div>

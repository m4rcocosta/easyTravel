<%= javascript_include_tag 'application' %>
<div class="devise_format"> 
  
  <h2>Registrati</h2><br/>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="input-field col s6">
    <i class="material-icons prefix">account_circle</i>
    <%= f.text_field :name, class: "validate", id: "name_field", autofocus: true %><br />
    <%= f.label "Nome", for: "name_field" %>
  </div>

  <div class="input-field col s6">
    <i class="material-icons prefix">account_circle</i>
    <%= f.text_field :surname, class: "validate", id: "surname_field", autofocus: true %><br />
    <%= f.label 'Cognome', for: "surname_field" %>
  </div>

  <div class="input-field col s6">
    <%= f.email_field :email, class: "validate", id: "email_field", autofocus: true, autocomplete: "email" %>
    <%= f.label :email, for: "email_field" %><br />
  </div>

  <div class="input-field col s6">
    <%= f.password_field :password, class: "validate", id: "password_field", autocomplete: "new-password" %>
    <%= f.label :password, for: "password_field" %><br />
    <span class="helper-text" data-error="wrong" data-success="right">
      <% if @minimum_password_length %>
      <em>(Minimo <%= @minimum_password_length %> caratteri)</em>
      <% end %><br />
    </span>
  </div>

  <div class="input-field col s6">
    <%= f.password_field :password_confirmation, class: "validate", id: "cpassword_field", autocomplete: "new-password" %>
    <%= f.label 'Conferma password', for: "cpassword_field" %><br />
  </div>

  <div class="field">
    <%= f.label 'Nato il' %><br />
    <%= f.text_field :birth, autofocus: true, id: "birth", class: "datepicker" %>
  </div>

  <div class="field">
    <%= f.label 'Sesso' %><br />
    <label style="float: left;">
      <%= f.radio_button :sex, 'Male', :checked => true %><span>M</span>
    </label>
    <label style="float: left;">
      <%= f.radio_button :sex, 'Female' %><span>F</span>
    </label>
    <div class="clear"></div>
  </div>

  <div class="actions">
    <%= link_to 'Indietro', root_path, class: 'waves-effect waves-light btn' %>
    <%= f.submit "Registrati", class: 'waves-effect waves-light btn' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>

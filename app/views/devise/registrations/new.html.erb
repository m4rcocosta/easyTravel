
<div class="devise_format"> 
  
  <h2>Registrati</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label 'Nome' %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label 'Cognome' %><br />
    <%= f.text_field :surname, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label 'Sesso' %><br />
    <%= f.text_field :sex, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label 'Nato il' %><br />
    <%= f.date_field :birth, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(Minimo <%= @minimum_password_length %> caratteri)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label 'Conferma password' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= link_to 'Indietro', root_path, class: 'waves-effect waves-light btn' %>
    <%= f.submit "Registrati", class: 'waves-effect waves-light btn' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>

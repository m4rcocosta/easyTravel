<head>
  <%= javascript_include_tag 'application' %>
</head>

<div class="devise_format" style="padding-bottom: 70px;"> 
  
  <h2>Registrati</h2><br/>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group" style="padding-bottom: 10px;">
    <%= f.label :avatar, class: 'col-sm-2 control-label'  %>
    <%= image_tag("/images/medium/missing.png", class:"user_avatar") %>
    <div class="col-sm-6">
      <%= f.file_field :avatar %>
    </div>
  </div>

  <div class="input-field col s6">
    <i class="material-icons prefix">account_circle</i>
    <%= f.text_field :first_name, class: "validate", id: "first_name_field" %><br />
    <%= f.label "Nome", for: "first_name_field" %>
  </div>

  <div class="input-field col s6">
    <i class="material-icons prefix">account_circle</i>
    <%= f.text_field :last_name, class: "validate", id: "last_name_field"%><br />
    <%= f.label 'Cognome', for: "last_name_field" %>
  </div>

  <div class="input-field col s6">
    <i class="material-icons prefix">mail</i>
    <%= f.email_field :email, class: "validate", id: "email_field", autocomplete: "email" %>
    <%= f.label :email, for: "email_field" %><br />
  </div>

  <div class="input-field col s6">
    <i class="material-icons prefix">security</i>
    <%= f.password_field :password, class: "validate", id: "password_field", autocomplete: "new-password" %>
    <%= f.label :password, for: "password_field" %><br />
    <span class="helper-text" data-error="Non corretto" data-success="Corretto">
      <% if @minimum_password_length %>
      <em>(Minimo <%= @minimum_password_length %> caratteri)</em>
      <% end %><br />
    </span>
  </div>

  <div class="input-field col s6">
    <i class="material-icons prefix">security</i>
    <%= f.password_field :password_confirmation, class: "validate", id: "cpassword_field", autocomplete: "new-password" %>
    <%= f.label 'Conferma password', for: "cpassword_field" %><br />
  </div>

  <div class="input-field col s6">
    <i class="material-icons prefix">perm_contact_calendar</i>
    <%= f.text_field :birth, id: "birth", class: "datepicker validate" %>
    <%= f.label 'Nato il', for: "birth" %><br />
  </div>
  
  <div class="field">
    <div class="switch">
      <label>
        Privato
        <%= f.check_box :roletype, id: "roletype" %>
        <span class="lever"></span>
        Aziendale
      </label>
    </div>
  </div>

  <div class="actions">
    <%= link_to 'Indietro', root_path, class: 'waves-effect waves-light btn' %>
    <%= f.submit "Registrati", class: 'waves-effect waves-light btn' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

<div class="push-footer"></div>

</div>
